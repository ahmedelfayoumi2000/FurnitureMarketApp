@model FurnitureMarketApp.Application.DTOs.FurnitureItemDto
@{
    ViewData["Title"] = "Delete Furniture Item";
}

<div class="text-center">
    <h2 class="welcome-title animate__animated animate__fadeInDown">Delete Furniture Item</h2>
    <p class="lead-text animate__animated animate__fadeInUp">
        Are you sure you want to delete this furniture item?
    </p>
    <hr class="divider" />
    <p class="features">
        Explore other sections:
        <span class="feature-item"><a href="@Url.Action("Index", "Users")"><i class="fas fa-users"></i><strong>Users</strong></a></span>,
        <span class="feature-item"><a href="@Url.Action("Index", "Offers")"><i class="fas fa-handshake"></i><strong>Offers</strong></a></span>,
        <span class="feature-item"><a href="@Url.Action("Index", "Messages")"><i class="fas fa-envelope"></i><strong>Messages</strong></a></span>,
        <span class="feature-item"><a href="@Url.Action("Index", "Favorites")"><i class="fas fa-heart"></i><strong>Favorites</strong></a></span>.
    </p>
    <div class="card bg-transparent border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2 animate__animated animate__fadeIn">Title</dt>
                <dd class="col-sm-10 animate__animated animate__fadeIn">@Model.title</dd>
                <dt class="col-sm-2 animate__animated animate__fadeIn">Category</dt>
                <dd class="col-sm-10 animate__animated animate__fadeIn">@Model.category</dd>
                <dt class="col-sm-2 animate__animated animate__fadeIn">Price</dt>
                <dd class="col-sm-10 animate__animated animate__fadeIn">@Model.price</dd>
            </dl>
            <form asp-action="DeleteConfirmed" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-custom animate__animated animate__fadeInUp">Delete</button>
                <a asp-action="Index" class="btn btn-custom animate__animated animate__fadeInUp">Cancel</a>
            </form>
        </div>
    </div>
</div>