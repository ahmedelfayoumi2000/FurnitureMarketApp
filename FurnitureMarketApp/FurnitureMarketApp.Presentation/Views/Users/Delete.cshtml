@model FurnitureMarketApp.Application.DTOs.UserDto
@{
    ViewData["Title"] = "Delete User";
}

<div class="text-center">
    <h2 class="welcome-title animate__animated animate__fadeInDown">Delete User</h2>
    <p class="lead-text animate__animated animate__fadeInUp">
        Are you sure you want to delete this user?
    </p>
    <hr class="divider" />
    <p class="features">
        Explore other sections:
        <span class="feature-item"><a href="@Url.Action("Index", "FurnitureItems")"><i class="fas fa-couch"></i><strong>Furniture</strong></a></span>,
        <span class="feature-item"><a href="@Url.Action("Index", "Offers")"><i class="fas fa-handshake"></i><strong>Offers</strong></a></span>,
        <span class="feature-item"><a href="@Url.Action("Index", "Messages")"><i class="fas fa-envelope"></i><strong>Messages</strong></a></span>,
        <span class="feature-item"><a href="@Url.Action("Index", "Favorites")"><i class="fas fa-heart"></i><strong>Favorites</strong></a></span>.
    </p>
    <div class="card bg-transparent border-0">
        <div class="card-body">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger animate__animated animate__fadeIn">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
            <dl class="row">
                <dt class="col-sm-2 animate__animated animate__fadeIn">Name</dt>
                <dd class="col-sm-10 animate__animated animate__fadeIn">@Model.name</dd>
                <dt class="col-sm-2 animate__animated animate__fadeIn">Email</dt>
                <dd class="col-sm-10 animate__animated animate__fadeIn">@Model.email</dd>
                <dt class="col-sm-2 animate__animated animate__fadeIn">Phone</dt>
                <dd class="col-sm-10 animate__animated animate__fadeIn">@Model.user_phone</dd>
            </dl>
            <form asp-action="DeleteConfirmed" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ID" />
                <button type="submit" class="btn btn-custom animate__animated animate__fadeInUp">Delete</button>
                <a asp-action="Index" class="btn btn-custom animate__animated animate__fadeInUp">Cancel</a>
            </form>
        </div>
    </div>
</div>