<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Furniture Market</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(45deg, #1a2a6c, #b21f1f, #fdbb2d);
            background-size: 400%;
            animation: gradientAnimation 15s ease infinite;
            min-height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #ffffff;
            padding-top: 60px;
        }
      
        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        .welcome-title {
            font-size: 3rem;
            text-shadow: 3px 3px 10px rgba(0,0,0,0.5);
            animation: fadeInDown 1.5s ease-in-out;
        }

        .lead-text {
            font-size: 1.5rem;
            animation: fadeInUp 2s ease-in-out;
        }

        .divider {
            border-color: #ffffff;
            width: 50%;
            margin: 20px auto;
            animation: fadeIn 2.5s ease-in-out;
        }

        .features a {
            color: #ffffff;
            text-decoration: none;
            font-size: 1.2rem;
            transition: color 0.3s ease;
        }

            .features a:hover {
                color: #ffd700;
            }

        .feature-item {
            display: inline-flex;
            align-items: center;
            margin: 0 15px;
            transition: transform 0.3s ease;
        }

            .feature-item:hover {
                transform: scale(1.1);
            }

            .feature-item i {
                margin-right: 8px;
                color: #ffd700;
                transition: color 0.3s ease;
            }

            .feature-item:hover i {
                color: #ff4d4d;
            }

        .btn-custom {
            font-size: 1.2rem;
            padding: 12px 30px;
            border-radius: 50px;
            border: 2px solid #ffffff;
            color: #ffffff;
            background: transparent;
            position: relative;
            overflow: hidden;
            transition: all 0.5s ease;
            animation: fadeInUp 3.5s ease-in-out;
        }

            .btn-custom::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
                transition: 0.5s;
            }

            .btn-custom:hover::before {
                left: 100%;
            }

            .btn-custom:hover {
                background: #ff4d4d;
                border-color: #ff4d4d;
                transform: translateY(-5px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            }

        .navbar {
            background: rgba(0,0,0,0.7);
            padding: 10px;
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
        }

            .navbar a {
                color: #ffffff;
                margin: 0 15px;
                text-decoration: none;
            }

                .navbar a:hover {
                    color: #ffd700;
                }

        .footer {
            position: fixed;
            bottom: 10px;
            right: 10px;
            color: #ffffff;
        }

        .form-group label {
            color: #ffffff;
            font-size: 1.1rem;
        }

        .form-control {
            background: rgba(255,255,255,0.1);
            border: 1px solid #ffffff;
            color: #ffffff;
        }

            .form-control:focus {
                background: rgba(255,255,255,0.2);
                border-color: #ffd700;
                color: #ffffff;
                box-shadow: 0 0 5px rgba(255,215,0,0.5);
            }

        .text-danger {
            animation: fadeIn 1s ease-in-out;
        }

        .table th, .table td {
            color: #ffffff;
        }

        .table thead th {
            background: rgba(0,0,0,0.5);
        }

        .table tbody tr {
            background: rgba(255,255,255,0.1);
            transition: background 0.3s ease;
        }

            .table tbody tr:hover {
                background: rgba(255,215,0,0.2);
            }

        .card {
            background: rgba(0,0,0,0.5);
            border: 1px solid #ffffff;
            animation: fadeIn 2s ease-in-out;
        }
    
        .lead-text {
            font-size: 1rem;
        }

        .feature-item {
            display: block;
            margin: 10px 0;
        }

        .btn-custom {
            font-size: 1rem;
            padding: 10px 20px;
        }

        .navbar a {
            margin: 0 5px;
        }

        }
    </style>
</head>
<body>
    <nav class="navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Furniture Market</a>
            <div>
                <a href="@Url.Action("Index", "Home")">Home</a>
                <a href="@Url.Action("Index", "Users")">Users</a>
                <a href="@Url.Action("Index", "FurnitureItems")">Furniture</a>
                <a href="@Url.Action("Index", "Offers")">Offers</a>
                <a href="@Url.Action("Index", "Messages")">Messages</a>
                <a href="@Url.Action("Index", "Favorites")">Favorites</a>
            </div>
        </div>
    </nav>

    <div class="container text-center">
        @RenderBody()
    </div>

    <div class="footer">
        © 2025 Furniture Market
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>