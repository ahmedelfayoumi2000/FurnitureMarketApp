@model FurnitureMarketApp.Application.DTOs.MessageDto
@{
    ViewData["Title"] = "Message Details";
}

<div class="text-center">
    <h2 class="welcome-title animate__animated animate__fadeInDown">Message Details</h2>
    <p class="lead-text animate__animated animate__fadeInUp">
        View details of this message.
    </p>
    <hr class="divider" />
    <p class="features">
        Explore other sections:
        <span class="feature-item"><a href="@Url.Action("Index", "Users")"><i class="fas fa-users"></i><strong>Users</strong></a></span>,
        <span class="feature-item"><a href="@Url.Action("Index", "FurnitureItems")"><i class="fas fa-couch"></i><strong>Furniture</strong></a></span>,
        <span class="feature-item"><a href="@Url.Action("Index", "Offers")"><i class="fas fa-handshake"></i><strong>Offers</strong></a></span>,
        <span class="feature-item"><a href="@Url.Action("Index", "Favorites")"><i class="fas fa-heart"></i><strong>Favorites</strong></a></span>.
    </p>
    <div class="card bg-transparent border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2 animate__animated animate__fadeIn">User ID</dt>
                <dd class="col-sm-10 animate__animated animate__fadeIn">@Model.ID_user</dd>
                <dt class="col-sm-2 animate__animated animate__fadeIn">Date</dt>
                <dd class="col-sm-10 animate__animated animate__fadeIn">@Model.date</dd>
                <dt class="col-sm-2 animate__animated animate__fadeIn">Content</dt>
                <dd class="col-sm-10 animate__animated animate__fadeIn">@Model.content</dd>
            </dl>
            <a asp-action="Index" class="btn btn-custom animate__animated animate__fadeInUp">Back to List</a>
            <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-custom animate__animated animate__fadeInUp">Edit</a>
        </div>
    </div>
</div>